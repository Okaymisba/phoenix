<!DOCTYPE html>
<html lang="en" x-data="{ sidebarOpen: false }">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
</head>

<body class="bg-white text-gray-900">

  <!-- Mobile header -->
  <header class="md:hidden flex items-center justify-between p-4 border-b">
    <button @click="sidebarOpen = true" class="text-gray-600">
      â˜°
    </button>
  </header>

  <div class="flex h-screen">

    <!-- Mobile overlay -->
    <div x-show="sidebarOpen" @click="sidebarOpen = false" class="fixed inset-0 z-30 bg-black bg-opacity-40 md:hidden">
    </div>

    <!-- Sidebar -->
    <div x-bind:class="sidebarOpen ? 'translate-x-0' : '-translate-x-full'"
      class="fixed inset-y-0 left-0 z-40 w-64 bg-[#faf9f9] border-r border-gray-200 p-4 transform transition-transform duration-200 ease-in-out md:relative md:translate-x-0 md:block">

      <!-- User Dropdown -->
      <div x-data="{ open: false }" class="relative mb-6">
        <button @click="open = !open"
          class="flex items-center px-2 py-1 rounded hover:bg-gray-200 w-full overflow-hidden">
          <div class="w-3 h-3 rounded-full bg-green-500 mr-2 shrink-0"></div>
          <div class="flex-1 truncate text-sm" title="user@email.com">
            {@current_user.email}
          </div>
          <svg class="w-4 h-4 text-gray-500 ml-2 shrink-0" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
          </svg>
        </button>

        <div x-show="open" x-cloak class="absolute mt-2 w-40 bg-white border rounded shadow z-10">
          <ul>
            <li>
              <.link href={~p"/users/settings"} class="block px-4 py-2 hover:bg-gray-100 cursor-pointer">
                Settings
              </.link>
            </li>
            <li>
              <.link href={~p"/users/log_out"} method="delete" class="block px-4 py-2 hover:bg-gray-100 cursor-pointer">
                Log out
              </.link>
            </li>
          </ul>
        </div>
      </div>

      <!-- Sidebar content -->
      <div class="space-y-4">
        <button>
          <.link href={~p"/tasks"} class="text-red-600 font-semibold hover:underline">+ Add task </.link>
        </button>
        <a class="block text-gray-700 hover:text-black">Inbox</a>
        <a class="block text-gray-700 hover:text-black font-semibold">Today</a>
        <a class="block text-gray-700 hover:text-black">Upcoming</a>
      </div>
    </div>

    <!-- Main content -->
    <main class="flex-1 p-6 overflow-y-auto">
      <h2 class="text-xl font-bold mb-4">Today's Tasks</h2>

      <ul class="space-y-4">
        <%= for task <- @tasks do %>
          <li class="flex items-start justify-between p-4 border rounded-md shadow-sm">
            <!-- Left: Checkbox + Title + Description -->
            <div class="flex items-start space-x-3">
              <!-- Form for checkbox toggle -->
              <.form for={%{}} as={:task} method="put" action={~p"/tasks/#{task.id}/toggle_complete"} class="mt-1">
                <button type="submit" class={ "w-5 h-5 rounded-full border-2 transition-all duration-200 " <>
                  if task.completed, do: "bg-green-500 border-green-500", else: "border-gray-400 hover:border-gray-600"
                  }>
                </button>
              </.form>




              <!-- Title + description -->
              <div>
                <p class={"text-base font-medium " <> if task.completed, do: " line-through text-gray-500", else: "" }>
                  <%= task.title %>
                </p>
                <p class="text-sm text-gray-500">
                  <%= task.description %>
                </p>
              </div>
            </div>

            <!-- Right: Due Date & Priority -->
            <div class="text-right text-sm text-gray-600">
              <p><strong>Due:</strong>
                <%= task.due_date %>
              </p>
              <p><strong>Priority:</strong>
                <%= task.priority %>
              </p>
            </div>
          </li>
          <% end %>
      </ul>

    </main>
  </div>

</body>

</html>